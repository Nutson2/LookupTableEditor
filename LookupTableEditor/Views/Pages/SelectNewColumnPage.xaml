<Page
    x:Class="LookupTableEditor.Views.SelectNewColumnPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LookupTableEditor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:LookupTableEditor.ViewModels"
    Title="SelectNewColumnPage"
    d:DataContext="{d:DesignInstance Type=vm:SelectNewColumnViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid >

        <DataGrid ItemsSource="{Binding Parameters}"
                  AutoGenerateColumns="False"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Definition.Name}"/>
                <DataGridTextColumn Header="ParameterGroup" Binding="{Binding Definition.ParameterGroup}"/>
                <DataGridTextColumn Header="StorageType" Binding="{Binding StorageType}"/>
                <DataGridTextColumn Header="StorageType2" Binding="{Binding StorageType}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
