<Page x:Class="LookupTableEditor.Views.Pages.SelectNewColumnPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:LookupTableEditor.ViewModels.Dialog"
      Title="SelectNewColumnPage"
      d:DataContext="{d:DesignInstance Type=vm:SelectNewColumnViewModel}"
      MinHeight="200"
      MaxHeight="600"
      MaxWidth="900"
      mc:Ignorable="d">

   <Page.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="..\Styles\BaseStyles.xaml" />
         </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
   </Page.Resources>

   <GroupBox>
      <GroupBox.Header>
         <TextBlock Text="Выбор параметра образца" />
      </GroupBox.Header>
      <Grid>
         <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
         </Grid.RowDefinitions>

         <DataGrid AutoGenerateColumns="False"
                   Background="{StaticResource background}"
                   ItemsSource="{Binding CollectionViewSource.View}"
                   SelectionChanged="DataGrid_SelectionChanged"
                   SelectionMode="Extended">
            <DataGrid.Resources>
               <Style TargetType="DataGridRow">
                  <Setter Property="IsSelected"
                          Value="{Binding isSelected}" />
               </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
               <DataGridTextColumn Binding="{Binding Name, Mode=OneWay}"
                                   Header="Параметр" />
               <DataGridTextColumn Binding="{Binding ParameterType.Label, Mode=OneWay}"
                                   Header="Тип параметра" />
               <DataGridTextColumn Binding="{Binding Value, Mode=OneWay}"
                                   Header="Значение" />
               <DataGridTextColumn Binding="{Binding Formula, Mode=OneWay}"
                                   Header="Формула" />
            </DataGrid.Columns>

            <DataGrid.GroupStyle>
               <GroupStyle>
                  <GroupStyle.ContainerStyle>
                     <Style TargetType="{x:Type GroupItem}">
                        <Setter Property="Template">
                           <Setter.Value>
                              <ControlTemplate TargetType="{x:Type GroupItem}">
                                 <Expander IsExpanded="True">
                                    <Expander.Header>
                                       <DockPanel>
                                          <TextBlock Foreground="{StaticResource fontColor}"
                                                     FontSize="16"
                                                     Text="{Binding Path=Name}" />
                                       </DockPanel>
                                    </Expander.Header>
                                    <Expander.Content>
                                       <ItemsPresenter />
                                    </Expander.Content>
                                 </Expander>
                              </ControlTemplate>
                           </Setter.Value>
                        </Setter>
                     </Style>
                  </GroupStyle.ContainerStyle>
               </GroupStyle>

               <GroupStyle>
                  <GroupStyle.HeaderTemplate>
                     <DataTemplate>
                        <DockPanel>
                           <TextBlock Foreground="{StaticResource fontColor}"
                                      FontSize="14"
                                      Margin="50,0,0,0"
                                      FontStyle="Italic"
                                      Text="{Binding Path=Name}" />
                        </DockPanel>
                     </DataTemplate>
                  </GroupStyle.HeaderTemplate>
               </GroupStyle>


            </DataGrid.GroupStyle>
         </DataGrid>
         <StackPanel Grid.Row="1"
                     HorizontalAlignment="Right"
                     Orientation="Horizontal">
            <Button Style="{StaticResource iconButton}"
                    Command="{Binding CancelCommand}"
                    Content="Отмена" />
            <Button Style="{StaticResource iconButton}"
                    Command="{Binding OkCommand}"
                    Content="Подтвердить" />
         </StackPanel>
      </Grid>
   </GroupBox>
</Page>